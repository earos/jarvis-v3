GRAFANA_API_KEY=your_api_key_here

# Uptime Kuma
UPTIME_KUMA_URL=http://192.168.10.104:3001

# Nginx Proxy Manager
NPM_URL=http://192.168.10.181:81
NPM_USER=admin@example.com
NPM_PASSWORD=your_password_here

# AdGuard Home
ADGUARD_URL=http://192.168.10.104:3000
ADGUARD_USER=admin
ADGUARD_PASSWORD=your_password_here

# 3D Printers (optional)
BAMBU_HOST=192.168.10.xxx
