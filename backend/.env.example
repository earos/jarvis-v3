# JARVIS v3 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - AI
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# OPTIONAL - Homelab Services
# =============================================================================

# Proxmox (token auth recommended)
PROXMOX_PVE1_HOST=192.168.10.50
PROXMOX_PVE2_HOST=192.168.10.51
PROXMOX_TOKEN_NAME=jarvis@pam!jarvis
PROXMOX_TOKEN_VALUE=your_token_here

# UniFi Network
UNIFI_HOST=192.168.10.1
UNIFI_USERNAME=jarvis
UNIFI_PASSWORD=your_password_here

# UniFi Protect
PROTECT_HOST=192.168.20.250
PROTECT_USERNAME=jarvis
PROTECT_PASSWORD=your_password_here

# Home Assistant
HOME_ASSISTANT_URL=http://192.168.10.227:8123
HOME_ASSISTANT_TOKEN=your_long_lived_token_here

# Synology NAS
SYNOLOGY_HOST=192.168.10.104
SYNOLOGY_USER=admin
SYNOLOGY_PASSWORD=your_password_here

# Portainer
PORTAINER_URL=https://192.168.10.104:9443
